/* pages/my/record/record.wxss */

.wrapper {
   width: 100%;
}

.back {
   position: fixed;
   z-index: -99;
   top: 0;
   left: 0;
   right: 0;
   bottom: 0;
   background: #f6f6f8;
}

.list_title {
   color: #666;
   margin-left: 30rpx;
   margin-top: 30rpx;
}

.list_wrapper {
   display: flex;
   flex-direction: column;
   align-items: center;
   padding: 40rpx 30rpx;
}


.item_wrapper {

   display: flex;
   flex-direction: row;
   align-items: center;
   width: 100%;
   padding: 20rpx;
   background: #fff;
   border-radius: 20rpx;
   margin-bottom: 20rpx;
   border: 1rpx solid rgb(228, 227, 227)
}

.state_info {
   width: 20%;
   font-size: 40rpx;
   font-weight: bold;
   color: #00E498;
}

.unusual_state {
   color: #f71b56;
}

.shuoming_info {
   width: 80%;
}

.data_time {
   font-size: 32rpx;
   color: #333;
   margin-bottom: 20rpx;
}

.unusual_info {
   font-size: 30rpx;
   color: #333;
}

.load_more {
   font-size: 26rpx;
   color: #666;
}