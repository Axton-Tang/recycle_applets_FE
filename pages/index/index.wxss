/**index.wxss**/

@import '../../styles/iconfont.wxss';

.wrapper {
   width: 100%;
}


.back {
   position: fixed;
   z-index: -99;
   top: 0;
   left: 0;
   right: 0;
   bottom: 0;
   background: #f6f6f8;
}

.top_info_wrapper {
   display: flex;
   flex-direction: row;
   justify-content: space-between;
   margin: 20rpx 20rpx;
   font-size: 26rpx;
}

.state_wrapper {
   display: flex;
   flex-direction: row;
   align-items: center;
}

.state_dot_green {
   width: 20rpx;
   height: 20rpx;
   border-radius: 100%;
   background: #00E498;
   margin: 0 10rpx;
}

.state_dot_red {
   width: 20rpx;
   height: 20rpx;
   border-radius: 100%;
   background: #f71b56;
   margin: 0 10rpx;
}

.look_box_wrapper {
   color: #999;
   border: 2rpx solid #999;
   border-radius: 10rpx;
   padding: 6rpx 10rpx;
}

.button_wrapper {
   display: flex;
   flex-direction: column;
   align-items: center;
}

.button {
   display: flex;
   flex-direction: column;
   margin-top: 80rpx;
   margin-bottom: 40rpx;
   width: 300rpx;
   height: 300rpx;
   border-radius: 100%;
   align-items: center;
   justify-content: center;
}

.button_on {
   background: rgb(255, 84, 130);
   box-shadow: 0 0 50rpx rgba(250, 49, 159, 0.5);
}

.button_off {
   background: #00E498;
   box-shadow: 0 0 50rpx rgba(26, 244, 171, 0.5);
}

.icon-state {
   color: #fff;
   font-size: 100rpx;
}
.button_info {
   font-size: 35rpx;
   color: #fff;
   font-weight: bold;
   padding-top: 50rpx;
}

.button_bottom_info {
   color: #666;

}

.box_info_wrapper {
   display: flex;
   flex-direction: column;
   align-items: center;
   padding: 40rpx 30rpx;
}

.box_item_wrapper {
   display: flex;
   flex-direction: row;
   align-items: center;
   width: 100%;
   height: 180rpx;
   background: #fff;
   border-radius: 20rpx;
   margin: 20rpx 0;
   border: 1rpx solid rgb(228, 227, 227)
}

.left_icon {
   padding: 0 30rpx;
}

.icon-xiangbox60 {
   font-size: 50rpx;
   color: #4ec092;
   margin-right: 40rpx;
}

.icon-xinxi {
   font-size: 70rpx;
   color: #1b80d4;
}

.surplus_title {
   color: #666;
   margin-right: 140rpx;

}

.surplus_info {
   font-size: 40rpx;
   color: #333;
}

.box_info_item {
   display: flex;
   flex-direction: column;
   align-items: center;
   padding: 0 20rpx;
}

.box_info {
   font-size: 34rpx;
   color: #333;
   margin-bottom: 10rpx;
}

.box_info_title {
   font-size: 28rpx;
   color: #666;
}