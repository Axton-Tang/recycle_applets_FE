/* pages/my/my.wxss */

@import '../../styles/iconfont.wxss';

.wrapper {
   width: 100%;
}

.back {
   position: fixed;
   z-index: -99;
   top: 0;
   left: 0;
   right: 0;
   bottom: 0;
   background: #f6f6f8;
}

.userInfo_wrapper {
   display: flex;
   flex-direction: column;
   align-items: center;
   border-bottom-right-radius: 120rpx;
   border-bottom-left-radius:120rpx;
   background-image: linear-gradient(to bottom right,#02ea94, #B3F7F6);
   padding: 40rpx 0 100rpx 0;
   color: #fff;
   font-weight: bold;
}

.userInfo_avatar {
   width: 150rpx;
   height: 150rpx;
   margin: 20rpx 0;
   border-radius: 100%;
   border: 6rpx solid #fff;
   background: #d8d8da;

}

.avatar {
   width: 100%;
   height: 100%;
   border-radius: 100%;
}


.userInfo_username {
   margin-bottom: 20rpx;
}

.line {
   width: 80%;
   height: 2rpx;
   background: #fff;
}

.jifen {
   font-size: 30rpx;
   padding-top: 20rpx;
}

.item-wrapper {
   margin: 0 30rpx;
   margin-top: -60rpx;
   background: #fff;
   border-radius: 40rpx;
   box-shadow: 0 2px 12px 0 rgba(95, 250, 211, 0.2);
   color: #666;
   padding: 0 30rpx;
}

.item {
   padding: 30rpx 0;
}

.icon-jiantou {
   float: right;
   color: rgb(191, 191, 191);
}

.border-bottom {
   border-bottom: solid 2rpx rgb(238, 238, 238);
}

.icon-item {
   font-size: 32rpx;
   color: #666;
   padding-right: 20rpx;
}